@model Tienda.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">
    <h2 class="text-light fw-bold mb-4">
        <i class="bi bi-credit-card"></i> Finalizar Compra
    </h2>

    <div class="row">
        <!-- COLUMNA IZQUIERDA -->
        <div class="col-lg-8">
            <div class="aura-card mb-4">
                <h5 class="text-aura mb-3">Información del Cliente</h5>

                <form asp-controller="Carrito" asp-action="Checkout" method="post" id="checkoutForm">
                    @Html.AntiForgeryToken()

                    <!-- TOGGLE CLIENTE EXISTENTE -->
                    <div class="mb-3">
                        <label class="form-label text-light">
                            <i class="bi bi-person"></i> ¿Ya eres cliente?
                        </label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="clienteExistenteToggle" checked>
                            <label class="form-check-label text-light" for="clienteExistenteToggle">
                                Sí, seleccionar cliente existente
                            </label>
                        </div>
                    </div>

                    <!-- CLIENTE EXISTENTE -->
                    <div id="clienteExistenteDiv">
                        <div class="mb-3">
                            <label class="form-label text-light">
                                <i class="bi bi-person-check"></i> Selecciona tu perfil
                            </label>

                            <select name="ClienteId" id="clienteId" class="form-control">
                                <option value="">-- Seleccione un cliente --</option>

                                @foreach (var cliente in Model.Clientes)
                                {
                                    if (Model.ClienteId == cliente.ClienteId)
                                    {
                                        <option value="@cliente.ClienteId" selected="selected">
                                            @cliente.Nombre
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="@cliente.ClienteId">
                                            @cliente.Nombre
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <!-- NUEVO CLIENTE -->
                    <div id="clienteNuevoDiv" style="display:none;">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Completa tus datos para crear tu perfil
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-light"><i class="bi bi-person"></i> Nombre Completo *</label>
                            <input asp-for="NuevoNombre" id="nuevoNombre" class="form-control" placeholder="Ej: Juan Pérez" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-light"><i class="bi bi-envelope"></i> Email</label>
                            <input asp-for="NuevoEmail" class="form-control" placeholder="correo@example.com" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-light"><i class="bi bi-phone"></i> Teléfono</label>
                            <input asp-for="NuevoTelefono" class="form-control" placeholder="8888-8888" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-light"><i class="bi bi-geo-alt"></i> Dirección</label>
                            <textarea asp-for="NuevaDireccion" class="form-control" rows="2"></textarea>
                        </div>
                    </div>

                    <!-- DESCUENTO -->
                    <div class="mb-3">
                        <label asp-for="DescuentoPorcentaje" class="form-label text-light">
                            <i class="bi bi-tag"></i> Descuento (%)
                        </label>
                        <input asp-for="DescuentoPorcentaje" id="descuentoInput" class="form-control" min="0" max="100" />
                    </div>

                    <!-- BOTONES -->
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-aura">
                            <i class="bi bi-check-circle"></i> Confirmar Compra
                        </button>

                        <a asp-controller="Carrito" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Carrito
                        </a>
                    </div>

                </form>
            </div>
        </div>

        <!-- COLUMNA DERECHA -->
        <div class="col-lg-4">
            <div class="carrito-resumen">
                <h4 class="text-light mb-4">Resumen del Pedido</h4>

                <div class="mb-3">
                    <h6 class="text-aura">Productos:</h6>

                    @foreach (var item in Model.Items)
                    {
                        <div class="d-flex justify-content-between text-light mb-2">
                            <span>@item.Nombre x@item.Cantidad</span>
                            <strong>@((item.Cantidad * item.PrecioUnitario).ToString("?#,##0.00"))</strong>
                        </div>
                    }
                </div>

                <hr />

                <div class="resumen-item">
                    <span>Subtotal:</span>
                    <span id="subtotalTexto">@Model.Subtotal.ToString("?#,##0.00")</span>
                </div>

                <div class="resumen-item">
                    <span>Descuento:</span>
                    <span id="descuentoTexto">-@Model.DescuentoMonto.ToString("?#,##0.00")</span>
                </div>

                <div class="resumen-item">
                    <span>Impuesto (13%):</span>
                    <span id="impuestoTexto">@Model.Impuesto.ToString("?#,##0.00")</span>
                </div>

                <div class="resumen-item resumen-total">
                    <span>Total:</span>
                    <strong id="totalTexto">@Model.Total.ToString("?#,##0.00")</strong>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Alternar cliente existente/nuevo
        document.getElementById('clienteExistenteToggle').addEventListener('change', function () {
            const ex = this.checked;
            document.getElementById('clienteExistenteDiv').style.display = ex ? 'block' : 'none';
            document.getElementById('clienteNuevoDiv').style.display = ex ? 'none' : 'block';
        });

        // Recalcular totales dinámicamente
        document.getElementById('descuentoInput').addEventListener('input', function () {
            const val = parseFloat(this.value) || 0;

            fetch(`/Carrito/ObtenerTotal?descuentoPorcentaje=${val}`)
                .then(r => r.json())
                .then(data => {
                    document.getElementById('subtotalTexto').innerText =
                        data.subtotal.toLocaleString('es-CR', { minimumFractionDigits: 2 });

                    document.getElementById('descuentoTexto').innerText =
                        "-" + data.descuentoMonto.toLocaleString('es-CR', { minimumFractionDigits: 2 });

                    document.getElementById('impuestoTexto').innerText =
                        data.impuesto.toLocaleString('es-CR', { minimumFractionDigits: 2 });

                    document.getElementById('totalTexto').innerText =
                        data.total.toLocaleString('es-CR', { minimumFractionDigits: 2 });
                });
        });
    </script>
}

<style>
    .carrito-resumen {
        background-color: #1e1e2f;
        border: 1px solid #333;
        border-radius: 12px;
        padding: 2rem;
        position: sticky;
        top: 20px;
    }

    .resumen-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.6rem;
        color: #f1f1f1;
    }

    .resumen-total {
        font-size: 1.5rem;
        font-weight: 800;
        color: #00bcd4;
        border-top: 2px solid #333;
        padding-top: 1rem;
        margin-top: 1rem;
    }
</style>
