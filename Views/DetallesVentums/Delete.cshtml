@model Tienda.Models.DetallesVentum
@using System.Globalization

@{
    ViewData["Title"] = "Eliminar Detalle";
    var cultura = new CultureInfo("es-CR");
    var subtotal = Model.Cantidad * Model.PrecioUnitario;
}

<div class="container my-5">
    <div class="aura-card p-4">
        <h2 class="text-danger fw-bold mb-4">
            <i class="bi bi-trash"></i> Eliminar Detalle de Venta
        </h2>

        <p class="text-light">
            ¿Seguro que deseas eliminar este detalle?
            Esta acción también devolverá la cantidad al stock del producto.
        </p>

        <hr />

        <p><strong>Producto:</strong> @Model.Producto?.Nombre</p>
        <p><strong>Cantidad:</strong> @Model.Cantidad</p>
        <p>
            <strong>Precio Unitario:</strong>
            @string.Format(cultura, "{0:C}", Model.PrecioUnitario)
        </p>
        <p>
            <strong>Subtotal:</strong>
            @string.Format(cultura, "{0:C}", subtotal)
        </p>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="DetalleId" />

            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirmar Eliminación
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                Cancelar
            </a>
        </form>
    </div>
</div>
