@model IEnumerable<Tienda.Models.Factura>

@{
    ViewData["Title"] = "Facturas";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-aura fw-bold">
            <i class="bi bi-receipt"></i> Facturas
        </h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-dark text-center">
            <i class="bi bi-inbox fs-3"></i>
            <p class="mb-0 mt-2">No hay facturas registradas aún.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="aura-card">
                        <h5 class="mb-2">Factura #@item.NumeroConsecutivo</h5>
                        <p><strong>Clave:</strong> @item.Clave</p>
                        <p><strong>Fecha:</strong> @item.FechaEmision.ToString("dd/MM/yyyy HH:mm")</p>
                        <p><strong>Cliente:</strong> @item.Venta?.Cliente?.Nombre</p>
                        <p><strong>Total:</strong> @item.Venta?.Total?.ToString("C")</p>
                        <p><strong>Estado:</strong> @item.Estado</p>

                        <div class="text-end mt-3">
                            <a asp-action="Details" asp-route-id="@item.FacturaId" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> Ver
                            </a>
                            <a asp-action="Descargar" asp-route-id="@item.FacturaId" class="btn btn-sm btn-aura ms-2">
                                <i class="bi bi-download"></i> PDF
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>