@model IEnumerable<Tienda.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

@section Styles {
    <style>
        .product-card {
   background-color: #2a2a3e;
      border-radius: 16px;
            overflow: hidden;
          transition: transform 0.3s ease, box-shadow 0.3s ease;
     height: 100%;
            display: flex;
      flex-direction: column;
    }

    .product-card:hover {
       transform: translateY(-8px);
            box-shadow: 0 8px 24px rgba(0, 188, 212, 0.3);
     }

        .product-image-container {
  position: relative;
  width: 100%;
            height: 280px;
            background-color: #1e1e2f;
      overflow: hidden;
        }

      .product-image {
          width: 100%;
      height: 100%;
          object-fit: cover;
        }

    .no-image-placeholder {
            width: 100%;
      height: 100%;
 display: flex;
         align-items: center;
 justify-content: center;
          background: linear-gradient(135deg, #1e1e2f 0%, #2a2a3e 100%);
   color: #666;
   }

        .favorite-icon {
            position: absolute;
       top: 15px;
   right: 15px;
  background-color: rgba(255, 255, 255, 0.9);
     border-radius: 50%;
            width: 40px;
          height: 40px;
    display: flex;
       align-items: center;
     justify-content: center;
       cursor: pointer;
        transition: all 0.3s ease;
        }

        .favorite-icon:hover {
         background-color: #00bcd4;
      color: white;
        }

      .product-card-body {
   padding: 1.5rem;
          flex-grow: 1;
      display: flex;
            flex-direction: column;
        }

     .product-title {
     font-size: 1.1rem;
       font-weight: 700;
      color: #f1f1f1;
     margin-bottom: 0.5rem;
            text-transform: uppercase;
        }

 .product-subtitle {
  font-size: 0.9rem;
 color: #999;
     margin-bottom: 0.8rem;
        }

 .product-price {
            font-size: 1.5rem;
    font-weight: 800;
            color: #00bcd4;
            margin-bottom: 0.5rem;
        }

        .product-sku {
     font-size: 0.85rem;
            color: #777;
            margin-bottom: 1rem;
        }

    .stock-badge {
            display: inline-flex;
            align-items: center;
   gap: 0.4rem;
          font-size: 0.85rem;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
     font-weight: 600;
            margin-top: auto;
     }

        .stock-ok {
        background-color: rgba(76, 175, 80, 0.2);
   color: #4caf50;
      border: 1px solid #4caf50;
      }

        .stock-low {
      background-color: rgba(255, 82, 82, 0.2);
          color: #ff5252;
   border: 1px solid #ff5252;
        }

        .btn-aura {
      background-color: #00bcd4;
            color: #121212;
            border: none;
   font-weight: 600;
  padding: 0.6rem 1.5rem;
   }

        .btn-aura:hover {
  background-color: #00acc1;
      color: #fff;
        }

   .product-actions {
  position: absolute;
     bottom: 15px;
      left: 15px;
      right: 15px;
            display: flex;
      gap: 0.5rem;
    opacity: 0;
            transform: translateY(10px);
     transition: all 0.3s ease;
      }

        .product-card:hover .product-actions {
   opacity: 1;
    transform: translateY(0);
        }

   .action-btn {
         flex: 1;
      background-color: rgba(0, 188, 212, 0.9);
    color: white;
         border: none;
            padding: 0.5rem;
      border-radius: 8px;
 font-size: 0.9rem;
        font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
     }

        .action-btn:hover {
     background-color: #00bcd4;
        transform: scale(1.05);
        }

.action-btn.delete {
   background-color: rgba(255, 82, 82, 0.9);
}

        .action-btn.delete:hover {
            background-color: #ff5252;
        }

.btn-add-to-cart {
  background-color: #00bcd4;
  color: #fff;
  border: none;
  padding: 0.6rem;
  border-radius: 8px;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-add-to-cart:hover {
  background-color: #00acc1;
  transform: scale(1.05);
}

.toast-notification {
  position: fixed;
  top: 20px;
  right: 20px;
  min-width: 250px;
  max-width: 300px;
  padding: 1rem;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  z-index: 1000;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  animation: slideIn 0.5s ease-out, fadeOut 0.5s ease-in 3s forwards;
}

@@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@@keyframes fadeOut {
  to {
    opacity: 0;
    transform: translateY(10px);
  }
}
    </style>
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-light fw-bold">
            <i class="bi bi-box-seam"></i> Productos
      </h2>
        <a asp-action="Create" class="btn btn-aura">
            <i class="bi bi-plus-circle"></i> Nuevo Producto
  </a>
    </div>

 @if (!Model.Any())
    {
    <div class="alert alert-dark text-center">
          <i class="bi bi-inbox fs-3"></i>
          <p class="mb-0 mt-2">No hay productos registrados aún.</p>
        </div>
    }
    else
    {
     <div class="row g-4">
          @foreach (var item in Model)
            {
   <div class="col-md-6 col-lg-3">
           <div class="product-card">
    <div class="product-image-container">
      @if (!string.IsNullOrEmpty(item.ImagenUrl))
      {
        <img src="@item.ImagenUrl" alt="@item.Nombre" class="product-image" />
              }
         else
     {
      <div class="no-image-placeholder">
          <i class="bi bi-image fs-1"></i>
    </div>
          }
      <div class="favorite-icon">
             <i class="bi bi-heart"></i>
    </div>
          <div class="product-actions">
             <a asp-action="Edit" asp-route-id="@item.ProductoId" class="action-btn">
                <i class="bi bi-pencil"></i> Editar
      </a>
              <a asp-action="Details" asp-route-id="@item.ProductoId" class="action-btn">
     <i class="bi bi-eye"></i> Ver
  </a>
         <a asp-action="Delete" asp-route-id="@item.ProductoId" class="action-btn delete">
     <i class="bi bi-trash"></i>
       </a>
    </div>
        </div>
   <div class="product-card-body">
         <h5 class="product-title">@item.Nombre</h5>
       <p class="product-subtitle">@item.Categoria?.Nombre</p>
   <p class="product-subtitle mb-0">
   @if (!string.IsNullOrEmpty(item.Color))
         {
                <span>@item.Color</span>
         }
             @if (!string.IsNullOrEmpty(item.Talla))
     {
      <span> • @item.Talla</span>
       }
  </p>
           <div class="product-price">@item.Precio.ToString("₡#,##0.00")</div>
             <div class="product-sku">SKU: PR-@item.ProductoId.ToString("D6")</div>
  <div class="stock-badge @(item.Stock > 5 ? "stock-ok" : "stock-low")">
       <i class="bi bi-check-circle-fill"></i>
   @if (item.Stock > 0)
               {
       <span>En stock (@item.Stock unidades)</span>
          }
             else
              {
          <span>Agotado</span>
         }
     </div>
  
         @* Botón Agregar al Carrito *@
          <div class="mt-3">
           @if (item.Stock > 0)
            {
  <button class="btn btn-add-to-cart w-100" 
   onclick="agregarAlCarrito(@item.ProductoId, '@item.Nombre', @item.Precio)"
        data-producto-id="@item.ProductoId">
        <i class="bi bi-cart-plus"></i> Agregar al Carrito
       </button>
     }
    else
   {
   <button class="btn btn-add-to-cart w-100" disabled>
  <i class="bi bi-x-circle"></i> Agotado
       </button>
          }
     </div>
              </div>
            </div>
        </div>
    }
   </div>
    }
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    
    <script>
 function agregarAlCarrito(productoId, nombreProducto, precio) {
   const button = event.target.closest('button');
     const originalContent = button.innerHTML;

            // Deshabilitar botón temporalmente
    button.disabled = true;
       button.innerHTML = '<i class="bi bi-hourglass-split"></i> Agregando...';

        // Obtener el token anti-forgery
      const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

   fetch('@Url.Action("AgregarProducto", "Carrito")', {
  method: 'POST',
      headers: {
    'Content-Type': 'application/json',
    'RequestVerificationToken': token
     },
   body: JSON.stringify({
        productoId: productoId,
   cantidad: 1
       })
          })
             .then(response => response.json())
  .then(data => {
        if (data.success) {
          // Cambiar botón temporalmente
        button.innerHTML = '<i class="bi bi-check-circle"></i> ¡Agregado!';
                button.classList.add('btn-success-temp');

  // Mostrar notificación
        mostrarNotificacion('success', `${nombreProducto} agregado al carrito`);

           // Actualizar contador del carrito si existe
   actualizarContadorCarrito(data.totalItems);

         // Restaurar botón después de 2 segundos
      setTimeout(() => {
  button.innerHTML = originalContent;
         button.classList.remove('btn-success-temp');
      button.disabled = false;
          }, 2000);
  } else {
            button.innerHTML = originalContent;
   button.disabled = false;
       mostrarNotificacion('error', data.message || 'Error al agregar al carrito');
     }
  })
         .catch(error => {
               console.error('Error:', error);
     button.innerHTML = originalContent;
    button.disabled = false;
       mostrarNotificacion('error', 'Error al agregar al carrito');
     });
   }

        function mostrarNotificacion(tipo, mensaje) {
   // Crear notificación toast
   const toast = document.createElement('div');
   toast.className = `toast-notification toast-${tipo}`;
   toast.innerHTML = `
          <i class="bi bi-${tipo === 'success' ? 'check-circle-fill' : 'exclamation-circle-fill'}"></i>
    <span>${mensaje}</span>
       `;

   document.body.appendChild(toast);

     // Mostrar con animación
     setTimeout(() => toast.classList.add('show'), 100);

            // Ocultar y eliminar
   setTimeout(() => {
           toast.classList.remove('show');
      setTimeout(() => toast.remove(), 300);
   }, 3000);
        }

   function actualizarContadorCarrito(totalItems) {
          const contador = document.getElementById('cart-counter');
  if (contador) {
      contador.textContent = totalItems;
    contador.style.display = totalItems > 0 ? 'inline-block' : 'none';
            }
        }
    </script>
}