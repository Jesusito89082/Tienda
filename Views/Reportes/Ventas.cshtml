@model Tienda.ViewModels.ReporteVentasViewModel

@{
    ViewData["Title"] = "Reporte de ventas";
}

<div class="container my-5">
    <h1 class="mb-3">@Model.Titulo</h1>

    <div class="mb-3">
        <a href="@Url.Action("Ventas", "Reportes", new { periodo = "diario" })"
           class="btn btn-sm @(Model.Periodo == "diario" ? "btn-primary" : "btn-outline-primary")">
            Diario
        </a>
        <a href="@Url.Action("Ventas", "Reportes", new { periodo = "semanal" })"
           class="btn btn-sm @(Model.Periodo == "semanal" ? "btn-primary" : "btn-outline-primary")">
            Semanal
        </a>
        <a href="@Url.Action("Ventas", "Reportes", new { periodo = "mensual" })"
           class="btn btn-sm @(Model.Periodo == "mensual" ? "btn-primary" : "btn-outline-primary")">
            Mensual
        </a>
    </div>

    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-info">
            No hay ventas registradas para este periodo.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Periodo</th>
                    <th class="text-center">Cantidad de ventas</th>
                    <th class="text-end">Monto total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">@item.CantidadVentas</td>
                        <td class="text-end">@item.MontoTotal.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
