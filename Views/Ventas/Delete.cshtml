@model Tienda.Models.Venta

@{
    ViewData["Title"] = "Eliminar Venta";
    var tieneDetalles = ViewBag.TieneDetalles ?? false;
    var cantidadDetalles = ViewBag.CantidadDetalles ?? 0;
    var tieneFacturas = ViewBag.TieneFacturas ?? false;
    var cantidadFacturas = ViewBag.CantidadFacturas ?? 0;
    var puedeEliminar = !tieneDetalles && !tieneFacturas;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
   <div class="card aura-dark-card">
      <div class="card-header bg-danger text-white">
    <h3 class="mb-0">
    <i class="bi bi-exclamation-triangle"></i> Eliminar Venta
       </h3>
   </div>
       <div class="card-body">
         <h5 class="text-light mb-4">¿Está seguro que desea eliminar esta venta?</h5>
      
     @if (tieneDetalles)
        {
         <div class="alert alert-danger">
        <i class="bi bi-x-circle-fill"></i>
          <strong>¡Atención!</strong> Esta venta tiene <strong>@cantidadDetalles detalle(s)</strong> asociado(s).
 <br/>
    <strong>No se puede eliminar una venta con productos registrados.</strong>
   <br/>
 Las ventas con detalles deben mantenerse para preservar el historial comercial.
   </div>
         }

         @if (tieneFacturas)
{
        <div class="alert alert-danger">
      <i class="bi bi-file-earmark-x-fill"></i>
        <strong>¡Atención!</strong> Esta venta tiene <strong>@cantidadFacturas factura(s)</strong> generada(s).
     <br/>
       <strong>No se puede eliminar una venta facturada.</strong>
        <br/>
     Las facturas son documentos legales que deben conservarse.
         </div>
        }

     @if (puedeEliminar)
        {
     <div class="alert alert-warning">
    <i class="bi bi-info-circle"></i>
     Esta acción no se puede deshacer. La venta será eliminada permanentemente.
    </div>
     }

    <div class="p-4 rounded bg-dark mb-4">
       <dl class="row mb-0">
    <dt class="col-sm-3 text-muted">Venta #</dt>
      <dd class="col-sm-9 text-light fw-bold fs-4">@Model.VentaId</dd>
    
    <dt class="col-sm-3 text-muted">Cliente:</dt>
   <dd class="col-sm-9 text-light">@Model.Cliente?.Nombre</dd>
  
  <dt class="col-sm-3 text-muted">Fecha:</dt>
   <dd class="col-sm-9 text-light">@Model.Fecha?.ToString("dd/MM/yyyy HH:mm")</dd>
  
  <dt class="col-sm-3 text-muted">Total:</dt>
   <dd class="col-sm-9 text-success fw-bold fs-5">@Model.Total?.ToString("₡#,##0.00")</dd>

       @if (tieneDetalles)
     {
   <dt class="col-sm-3 text-muted">Detalles:</dt>
       <dd class="col-sm-9 text-light">
   @cantidadDetalles producto(s) vendido(s)
   <a asp-controller="DetallesVentums" asp-action="Index" class="btn btn-sm btn-info ms-2">
      <i class="bi bi-receipt"></i> Ver Detalles
     </a>
  </dd>
    }

       @if (tieneFacturas)
   {
       <dt class="col-sm-3 text-muted">Facturas:</dt>
   <dd class="col-sm-9 text-light">
   @cantidadFacturas factura(s) generada(s)
        <a asp-controller="Facturas" asp-action="Index" class="btn btn-sm btn-warning ms-2">
      <i class="bi bi-file-earmark-text"></i> Ver Facturas
      </a>
   </dd>
            }
   </dl>
         </div>

    <div class="d-flex gap-2">
   @if (puedeEliminar)
 {
   <form asp-action="Delete" method="post" class="flex-grow-1">
       <input type="hidden" asp-for="VentaId" />
        <button type="submit" class="btn btn-danger w-100" onclick="return confirm('¿Está completamente seguro de eliminar esta venta?');">
        <i class="bi bi-trash"></i> Sí, Eliminar Venta
        </button>
     </form>
        }
     <a asp-action="Index" class="btn btn-outline-secondary flex-grow-1">
   <i class="bi bi-arrow-left"></i> Cancelar
      </a>
     </div>
  </div>
       </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .aura-dark-card {
   background-color: #2a2a3e;
     border: 1px solid rgba(0, 188, 212, 0.3);
            border-radius: 12px;
      overflow: hidden;
        }

  .aura-dark-card .card-body {
  color: #f1f1f1;
        }
    </style>
}
